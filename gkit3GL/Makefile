ifndef config
  config=debug
endif

ifndef verbose
  SILENT = @
endif

ifeq ($(config),debug)
  libgkit3GL_config = debug
  cubeworld_config = debug
  test_bezier_config = debug
  test_deformations_config = debug
  test_ffd_config = debug
endif
ifeq ($(config),release)
  libgkit3GL_config = release
  cubeworld_config = release
  test_bezier_config = release
  test_deformations_config = release
  test_ffd_config = release
endif

PROJECTS := libgkit3GL cubeworld test_bezier test_deformations test_ffd

.PHONY: all clean help $(PROJECTS) 

all: $(PROJECTS)

libgkit3GL:
ifneq (,$(libgkit3GL_config))
	@echo "==== Building libgkit3GL ($(libgkit3GL_config)) ===="
	@${MAKE} --no-print-directory -C . -f libgkit3GL.make config=$(libgkit3GL_config)
endif

cubeworld: libgkit3GL
ifneq (,$(cubeworld_config))
	@echo "==== Building cubeworld ($(cubeworld_config)) ===="
	@${MAKE} --no-print-directory -C . -f cubeworld.make config=$(cubeworld_config)
endif

test_bezier: libgkit3GL
ifneq (,$(test_bezier_config))
	@echo "==== Building test_bezier ($(test_bezier_config)) ===="
	@${MAKE} --no-print-directory -C . -f test_bezier.make config=$(test_bezier_config)
endif

test_deformations: libgkit3GL
ifneq (,$(test_deformations_config))
	@echo "==== Building test_deformations ($(test_deformations_config)) ===="
	@${MAKE} --no-print-directory -C . -f test_deformations.make config=$(test_deformations_config)
endif

test_ffd: libgkit3GL
ifneq (,$(test_ffd_config))
	@echo "==== Building test_ffd ($(test_ffd_config)) ===="
	@${MAKE} --no-print-directory -C . -f test_ffd.make config=$(test_ffd_config)
endif

clean:
	@${MAKE} --no-print-directory -C . -f libgkit3GL.make clean
	@${MAKE} --no-print-directory -C . -f cubeworld.make clean
	@${MAKE} --no-print-directory -C . -f test_bezier.make clean
	@${MAKE} --no-print-directory -C . -f test_deformations.make clean
	@${MAKE} --no-print-directory -C . -f test_ffd.make clean

